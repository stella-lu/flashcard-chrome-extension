{
    "name": "Flashcards",
    "version": "1.0",
    "description": "Flashcard chrome extension",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab", 
        "contextMenus",
        "notifications"
    ]
}
